<div class="container-fluid py-4">
  <!-- Header -->
  <div class="header-section mb-4">
    <div class="row align-items-center">
      <div class="col-md-8">
        <h1 class="page-title">
          <i class="fas fa-search me-2"></i>物件検索
        </h1>
      </div>
      <div class="col-md-4">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item">
              <a href="/property" class="text-decoration-none">物件一覧</a>
            </li>
            <li class="breadcrumb-item active">検索</li>
          </ol>
        </nav>
      </div>
    </div>
  </div>

  <!-- Search Form -->
  <div class="search-section mb-4">
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">
          <i class="fas fa-filter me-2"></i>検索条件
        </h5>
      </div>
      <div class="card-body">
        <%= form_tag({:action=>'search'}, html: { method: :get, class: 'needs-validation', novalidate: true }) do %>
          <%= render 'search_template' %>
          
          <div class="text-center mt-4">
            <button class="btn btn-primary me-3" type="submit" onClick="javascript:screen_block();">
              <i class="fas fa-search me-2"></i>検索実行
            </button>
            <button type="reset" class="btn btn-outline-secondary">
              <i class="fas fa-undo me-2"></i>リセット
            </button>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Search Results -->
  <% if @biru_list %>
    <div class="results-section">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h5 class="mb-0">
            <i class="fas fa-list me-2"></i>検索結果
          </h5>
          <span class="badge bg-primary"><%= @biru_list.length %>件</span>
        </div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table id="propertyTable" class="table table-hover mb-0">
              <thead class="table-light">
                <tr>
                  <th>営業所</th>
                  <th>管理委託CD</th>
                  <th>管理方式</th>
                  <th>建物CD</th>
                  <th>建物名</th>
                  <th>建物住所</th>
                  <th>貸主CD</th>
                  <th>貸主名</th>
                  <th>貸主メモ</th>
                  <th>貸主住所</th>
                </tr>
              </thead>
              <tbody>
                <% @biru_list.each do |item| %>
                  <tr>
                    <td><span class="badge bg-info text-white"><%= item['shop_name'] %></span></td>
                    <td><code><%= item['trust_code'] %></code></td>
                    <td><span class="badge bg-secondary text-white"><%= item['manage_type_name'] %></span></td>
                    <td><code><%= item['building_code'] %></code></td>
                    <td><strong><%= item['building_name'] %></strong></td>
                    <td><%= item['building_address'] %></td>
                    <td><code><%= item['owner_code'] %></code></td>
                    <td>
                      <a href="#" class="text-primary text-decoration-none fw-bold">
                        <%= item['owner_name_link']&.gsub(/<[^>]*>/, '') || item['owner_name'] %>
                      </a>
                    </td>
                    <td>
                      <% if item['owner_memo'].present? %>
                        <span class="text-muted small" title="<%= item['owner_memo'] %>">
                          <%= truncate(item['owner_memo'], length: 50) %>
                        </span>
                      <% end %>
                    </td>
                    <td><%= item['owner_address'] %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<script>
// jQueryの競合を避けるための処理
(function($) {
  'use strict';
  
  // DataTablesの読み込みを動的に行う
  function loadDataTables() {
    if (typeof $.fn.DataTable === 'undefined') {
      // DataTables CSS
      if (!document.querySelector('link[href*="dataTables.bootstrap5"]')) {
        var cssLink = document.createElement('link');
        cssLink.rel = 'stylesheet';
        cssLink.type = 'text/css';
        cssLink.href = 'https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css';
        document.head.appendChild(cssLink);
      }
      
      if (!document.querySelector('link[href*="responsive.bootstrap5"]')) {
        var responsiveCssLink = document.createElement('link');
        responsiveCssLink.rel = 'stylesheet';
        responsiveCssLink.type = 'text/css';
        responsiveCssLink.href = 'https://cdn.datatables.net/responsive/2.5.0/css/responsive.bootstrap5.min.css';
        document.head.appendChild(responsiveCssLink);
      }

      // DataTables JavaScript
      var scripts = [
        'https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js',
        'https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js',
        'https://cdn.datatables.net/responsive/2.5.0/js/dataTables.responsive.min.js',
        'https://cdn.datatables.net/responsive/2.5.0/js/responsive.bootstrap5.min.js'
      ];

      var loadedScripts = 0;
      scripts.forEach(function(src) {
        if (!document.querySelector('script[src="' + src + '"]')) {
          var script = document.createElement('script');
          script.type = 'text/javascript';
          script.src = src;
          script.onload = function() {
            loadedScripts++;
            if (loadedScripts === scripts.length) {
              initializeDataTable();
            }
          };
          script.onerror = function() {
            console.warn('Failed to load:', src);
            loadedScripts++;
            if (loadedScripts === scripts.length) {
              initializeDataTable();
            }
          };
          document.head.appendChild(script);
        } else {
          loadedScripts++;
          if (loadedScripts === scripts.length) {
            initializeDataTable();
          }
        }
      });
    } else {
      initializeDataTable();
    }
  }

  function initializeDataTable() {
    if ($('#propertyTable').length && typeof $.fn.DataTable !== 'undefined') {
      try {
        $('#propertyTable').DataTable({
          responsive: true,
          language: {
            url: 'https://cdn.datatables.net/plug-ins/1.13.7/i18n/ja.json'
          },
          pageLength: 25,
          order: [[4, 'asc']], // 建物名でソート
          columnDefs: [
            {
              targets: [1, 3, 6], // コード列
              className: 'text-center'
            },
            {
              targets: [0, 2], // バッジ列
              className: 'text-center'
            }
          ],
          dom: '<"row"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>' +
               '<"row"<"col-sm-12"tr>>' +
               '<"row"<"col-sm-12 col-md-5"i><"col-sm-12 col-md-7"p>>',
          lengthMenu: [[10, 25, 50, 100, -1], [10, 25, 50, 100, "すべて"]]
        });
      } catch (e) {
        console.warn('DataTables initialization failed:', e);
      }
    }
  }

  // DOM読み込み完了後に実行
  $(document).ready(function() {
    // フォームバリデーション
    const forms = document.querySelectorAll('.needs-validation');
    Array.from(forms).forEach(form => {
      form.addEventListener('submit', event => {
        if (!form.checkValidity()) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });

    // ツールチップ初期化
    if (typeof bootstrap !== 'undefined') {
      var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
      var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl);
      });
    }

    // DataTables初期化
    loadDataTables();
  });

})(jQuery);
</script>

